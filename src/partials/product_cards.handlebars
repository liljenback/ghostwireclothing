<section class="product_section layout_padding">
  <div class="container">
    <div class="heading_container heading_center">
      <h2>{{title}}</h2>
    </div>

    <div class="row">
      {{#each products}}
      <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="box">
          <div class="option_container">
            <div class="options">
              {{#if ../details}}
              <a href="/{{url}}" class="option1">
                Details
              </a>
              {{/if}}
              {{#if ../addToCart}}
              <button style="padding: 8px 15px; border-radius: 30px; width: 165px; display: inline-block;"
                class="addToCart" data-product-index="{{@index}}">
                Add to Cart
              </button>
              {{/if}}
            </div>
            <div class="spinner-border" style="display: none;"></div>
          </div>
          <div class="detail-box">
            <h6>
              {{name}}
            </h6>
          </div>
          <div class="img-box">
            <img src="/images/{{image}}" alt="">
          </div>
          {{#if price}}
          <div class="detail-box">
            <h6>
              ${{price}}
            </h6>
          </div>
          {{/if}}
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>
